{{- $.Scratch.Add "index" slice -}}
{{- range .Site.RegularPages -}}
    {{- if and (not .Params.private) (not .Params.draft) -}}
        {{- $.Scratch.Add "index" (dict "title" .Title "content" .Plain "date" (.Date.Format "2006-01-02") "permalink" .Permalink) -}}
    {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}